<Window x:Class="Runner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Runner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FocusManager.FocusedElement="{Binding ElementName=myCanvas}">
    <Canvas x:Name="myCanvas" Focusable="True" KeyDown="myCanvas_KeyDown" KeyUp="myCanvas_KeyUp">
        <Rectangle x:Name="bg1" Canvas.Left="0" Width="1262" Height="400" Fill="LightSkyBlue"/>
        <Rectangle x:Name="bg2" Width="1262" Height="400" Fill="LightSkyBlue" Canvas.Left="1259" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <Rectangle x:Name="ground" Width="800" Height="40" Fill="Black" Canvas.Top="400" Canvas.Left="0" Canvas.Bottom="0"/>

        <Rectangle x:Name="player" Width="68" Height="76" Fill="Orange" Canvas.Top="200" Canvas.Left="10"/>
        <Rectangle x:Name="opstacl" Width="40" Height="50" Fill="Green" Canvas.Top="350" Canvas.Left="650"/>

        <Label Name="lblScore" Content="Score :0" Margin="5"/>
    </Canvas>
</Window>
